
#include <stdio.h>

void main(){
   int i, n, sum = 0;
   int *p;
   printf("Enter size of array ");
   scanf("%d", &n);
   printf("Enter elements in the array ");
   for (i = 0; i < n; i++){
      scanf("%d", p + i);
   }
   
   for (i = 0; i < n; i++){
      sum = sum + *(p + i);
   }
   printf("Sum of all elements in an array is = %d", sum);
   
          }
